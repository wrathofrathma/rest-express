{
  "name": "rest-express",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "server": "node ./dist/bin/www",
    "transpile": "babel ./server --out-dir dist",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "dev": "NODE_ENV=development npm-run-all build server",
    "start": "npm run prod",
    "prod": "NODE_ENV=production npm-run-all build server",
    "watch:dev": "nodemon",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.13",
    "@babel/preset-env": "^7.13.12",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "^4.17.1",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rifraf": "^2.0.3"
  },
  "devDependencies": {
    "jest": "^26.6.3"
  }
}
